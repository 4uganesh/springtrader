<?xml version='1.0' encoding='utf-8'?>
<Server>
    <GlobalNamingResources>
        <add:Resource auth="Container"
                      driverClassName="${nanotrader.driverClassName}"
                      initialSize="10"
                      jmxEnabled="true"
                      logAbandoned="true"
                      maxActive="20"
                      maxIdle="10"
                      maxWait="-1"
                      minEvictableIdleTimeMillis="30000"
                      name="jdbc/nanodb"
                      password="${nanotrader.password}"
                      removeAbandoned="true"
                      removeAbandonedTimeout="60"
                      testOnBorrow="true"
                      testOnReturn="false"
                      testWhileIdle="true"
                      timeBetweenEvictionRunsMillis="5000"
                      type="javax.sql.DataSource"
                      url="${nanotrader.url}"
                      username="${nanotrader.username}"
                      validationInterval="30000"
                      validationQuery="${nanotrader.validationQuery}"/>
    </GlobalNamingResources>
</Server>
